<div class="content-body">
  <%if(msg!=''){%>

  <div class="alert alert-success col-xs-6" id="flash_msg_dashboard"
    style="float: right;width: 27%;margin: -79px 5px 1px;z-index: 99999999999999999999 !important;  ">
    <h5><%= msg%></h5>
  </div>
  <%} %>
  <div class="row page-titles mx-0">
    <div class="col p-md-0">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active"><a href="/admin/invoice">Invoice</a></li>
      </ol>
    </div>
  </div>
  <!-- row -->

  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Invoices list</h4>
            <!-- <a href="/admin/add-user" class="btn mb-1 btn-rounded btn-outline-primary" style="float: right;margin: -40px 33px 2px 1px;"><span class="ladda-label">Add User</span><span class="ladda-spinner"></span><div class="ladda-progress" style="width: 136px;"></div></a> -->
            <div class="table-responsive">
              <table class="table table-striped table-bordered zero-configuration">
                <thead>
                  <tr>
                    <th>Id</th>
                    <th>OrderId</th>
                    <th>User name</th>
                    <th>Provider name</th>
                    <th>order-Date</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <%
                  if(response && response.length > 0){

                  for( var i in response){%>
                    <%console.log(response[i].user,"vddfgd") %>
                  <tr>
                    <td><%=parseInt(i)+1%></td>
                    <td>#<%=response[i].orderId%></td>
                     <%if(response[i].user!=null){%>
                    <td><%=response[i].user.name%></td>
                    <%}else{%>
                      <td></td>
                      <%}%>
                
                    <td><%=response[i].provider.firstName + ' ' + response[i].provider.lastName%></td>
                    <% var myDate = (response[i].order) ? new Date(response[i].order.date*1000): 0;
                                                %>
                    <td><%=myDate.toLocaleString();%></td>


                    <td class="text-center btns_3">

                      <a style="" href="/admin/invoice-view?id=<%=response[i].id%>"><i class="fa fa-eye" title="View"
                          style="color:#2aab77;font-size: 20px"></i></a>
