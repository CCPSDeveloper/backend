                      <a style="color:red;" href="#" class="invoice_delete" rel="<%=response[i].id%>"><i
                          class="fa fa-close color-danger" title="Delete" style="font-size: 20px"></i></a>


                    </td>
                  </tr>

                  <% } } %>

                  </tfoot>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
