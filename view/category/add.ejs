  <% include ../header.ejs %>
    <% include ../navbar.ejs %>
  <% include ../sidebar.ejs %>

  <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">

            <div class="row page-titles mx-0">
                <div class="col p-md-0">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active"><a href="/admin/category">Back</a></li>
                    </ol>
                </div>
            </div>
            <!-- row -->

            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-lg-12">

                        <div class="card">

                            <div class="card-body">
                                     <h4 class="card-title">Category Add</h4>
                                <div class="form-validation">
                                    <form class="form-valide" action="/admin/add_category" method="post" name="myForm" onsubmit="return validateForm()" enctype="multipart/form-data">
                                        <div class="form-group row">
                                            <label class="col-lg-2">Name <span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" id="name" name="name" onkeyup="validateForm()" placeholder="Enter a Name..">
                                                <span id="p2" style="display: none;color:#ff5e5e;width: 100%;margin-top: 0.25rem;font-size: 80%;">This field is required.</span>
                                            </div>
                                           
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-lg-2 col-form-label" for="val-email">Description <span class="text-danger"></span>
                                            </label>
                                            <div class="col-lg-6">
                                                <textarea class="form-control" name="description" rows="2" cols="4" placeholder="Enter a  description.."></textarea> 
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-lg-2 col-form-label" for="val-email">Type <span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-6">
                                                <select name="type" class="form-control" required>
                                                    <option value="0">Local Job</option>
                                                    <option value="1">Remote Job</option>
                                                </select>
                                            </div>
                                        </div>
                                     
                                      
                                        <div class="form-group row">
                                            <label class="col-lg-2 col-form-label" for="val-suggestions">Image <span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input type ="file" class="form-control" name="image" accept="image/*" onchange="previewImage(event)" required>


                                            </div>
                                             <img src="https://upload.wikimedia.org/wikipedia/commons/a/ac/No_image_available.svg" height="50" id="image_view">
                                        </div>
                                     
                                    
                                        <div class="form-group row">
                                            <div class="col-lg-8 ml-auto">
                                                <button type="submit" class="btn btn-primary">Submit</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #/ container -->
        </div>
        <!--**********************************
            Content body end
        ***********************************-->

          <% include ../footer.ejs %>

          <script>
            function validateForm() {
              var x = document.forms["myForm"]["name"].value;
              if (!x.replace(/\s/g, '').length) {
                document.getElementById("p2").style.display = "block";
                return false;
              }else{
                document.getElementById("p2").style.display = "none";
              }
            }
            </script>
