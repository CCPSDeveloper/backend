<% include ../header.ejs %>
<% include ../navbar.ejs %>
<% include ../sidebar.ejs %>

<!--**********************************
            Content body start
        ***********************************-->
<div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                <li class="breadcrumb-item active"><a href="/admin/faqs">Back</a></li>
            </ol>
        </div>
    </div>
    <!-- row -->

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-12">

                <div class="card">

                    <div class="card-body">
                        <h4 class="card-title">Add FAQ</h4>
                        <div class="form-validation">
                            <form class="form-valide" action="/admin/faq_add"  name="myForm" onsubmit="return validateForm()" method="post"
                                enctype="multipart/form-data">
                                <div class="form-group row">
                                    <label class="col-lg-2">Question <span
                                            class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                      <textarea rows="4" cols="5" name="question" id="question" class="form-control" placeholder="Enter question" onkeyup="validateForm()"></textarea> 
                                      <span id="p1" style="display: none;color:#ff5e5e;width: 100%;margin-top: 0.25rem;font-size: 80%;">This field is required.</span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-lg-2">Answer <span
                                            class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <textarea rows="4" cols="5" name="answer" id="answer" class="form-control" placeholder="Enter answer" onkeyup="validateForm()"></textarea> 
                                        <span id="p2" style="display: none;color:#ff5e5e;width: 100%;margin-top: 0.25rem;font-size: 80%;">This field is required.</span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-lg-8 ml-auto">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>
<!--**********************************
            Content body end
        ***********************************-->

<% include ../footer.ejs %>
<script>
    function validateForm() {
      var x = document.forms["myForm"]["question"].value;
      var y = document.forms["myForm"]["answer"].value;

      if (!x.replace(/\s/g, '').length) {
        document.getElementById("p1").style.display = "block";
        return false;
      }else{
        document.getElementById("p1").style.display = "none";
      }

      if (!y.replace(/\s/g, '').length) {
        document.getElementById("p2").style.display = "block";
        return false;
      }else{
        document.getElementById("p2").style.display = "none";
      }
    }
    </script>