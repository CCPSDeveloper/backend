<% include ../header.ejs %>
<% include ../navbar.ejs %>
<% include ../sidebar.ejs %>

<!--**********************************
            Content body start
        ***********************************-->
<div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                <li class="breadcrumb-item active"><a href="/admin/faqs">Back</a></li>
            </ol>
        </div>
    </div>
    <!-- row -->

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-12">

                <div class="card">

                    <div class="card-body">
                        <h4 class="card-title">FAQ Edit</h4>
                        <div class="form-validation">
                            <form class="form-valide" action="/admin/edit_faq" method="post"
                                enctype="multipart/form-data">

                                <div class="form-group row">
                                    <label class="col-lg-2 col-form-label">Question <span
                                            class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <textarea rows="4" cols="5" name="question" class="form-control" placeholder="Enter question" required><%=response.dataValues.question%></textarea>
                                    
                                    </div>
                                </div>


                            

                                <input type="hidden" name="id" value="<%=response.dataValues.id%>">

                                <div class="form-group row">
                                    <label class="col-lg-2 col-form-label">Answer <span
                                            class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <textarea rows="4" cols="5" name="answer" class="form-control" placeholder="Enter answer" required><%=response.dataValues.answer%></textarea>
                                   
                                    </div>
                                </div>
                               
                                <div class="form-group row">
                                    <div class="col-lg-8 ml-auto">
                                        <button type="submit" class="btn btn-primary">Update</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>
<!--**********************************
            Content body end
        ***********************************-->

<% include ../footer.ejs %>