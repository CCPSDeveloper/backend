<% include ./header.ejs %>
<% include ./navbar.ejs %>
<% include ./sidebar.ejs %>

<!--**********************************
            Content body start
        ***********************************-->
      
<div class="content-body">
    <%if(msg =="Current password does not matched"){%>
        <div class="alert alert-danger col-xs-6" id="msg" style="margin-left: 280px;">
                      
                      
                    <h5><%= msg%></h5>
                   
                  </div>
             <% } else if(msg=="Password updated successfully"){%> 
              <div class="alert alert-success col-xs-6" id="msg" style="margin-left: 280px;">
                      
                      
                  <h5><%= msg%></h5>
                </div>
              <%}%> 
    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                <li class="breadcrumb-item active"><a href="/admin/dashboard">Back</a></li>
            </ol>
        </div>
    </div>
    <!-- row -->

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-12">

                <div class="card">

                    <div class="card-body">
                        <h4 class="card-title">Change Password</h4>
                        <div class="form-validation">
                            <form class="form-valide" action="/change/password" method="post"
                                enctype="multipart/form-data">
                                <div class="form-group row">
                                    <label class="col-lg-2 col-form-label" for="val-username">Old Password <span
                                            class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="password" class="form-control" id="oldpassword" name="oldpassword"
                                            placeholder="Enter Old Password" name" value="" required>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-lg-2 col-form-label" for="val-password"> New Password <span
                                            class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="password" class="form-control" id="newpassword" name="newpassword" placeholder="Enter New password"  value="" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-2 col-form-label" for="val-password"> Confirm Password <span
                                            class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="password" class="form-control" id="confirmpassword" name="confirmpassword" placeholder="Enter confirm password"  value="" required>
                                    </div>
                                </div>



                                <div class="form-group row">
                                    <div class="col-lg-8 ml-auto">
                                        <button type="submit" id="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>
<!--**********************************
            Content body end
        ***********************************-->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#confirmpassword').on('keyup', function () {
            $('#message').html('');

            if ($('#newpassword').val() == $('#confirmpassword').val()) {

                $('#submit').prop('disabled', false);
            } else if ($('#newpassword').val() != $('#confirmpassword').val()) {
                $('#message').html('password and confirm password are does not Matched').css('color', 'red');

                $('#submit').prop('disabled', true);
            }
        });
    });
    
    
      setTimeout(() => {
         $("#msg").fadeOut('slow');
       },3000);
  
</script>

