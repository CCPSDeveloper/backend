<% include ../header.ejs %>
<% include ../navbar.ejs %>
<% include ../sidebar.ejs %>

<!--**********************************
            Content body start
        ***********************************-->
<div class="content-body">

  <div class="row page-titles mx-0">
    <div class="col p-md-0">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active"><a href="/admin/provider">Back</a></li>
      </ol>
    </div>
  </div>
  <!-- row -->

  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-lg-12">

        <div class="card">

          <div class="card-body">
            <h4 class="card-title">Provider Edit</h4>
            <div class="form-validation">
              <form class="form-valide" action="/admin/provider_edit" method="post" enctype="multipart/form-data">



                <div class="form-group row">
                  <label class="col-lg-4 col-form-label" for="val-username">First Name <span class="text-danger">*</span>
                  </label>
                  <div class="col-lg-6">
                    <input type="text" class="form-control" id="val-username" name="firstName" placeholder="Enter a Name.."
                      value="<%=response.dataValues.firstName%>">
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-lg-4 col-form-label" for="val-username">Last Name <span class="text-danger">*</span>
                  </label>
                  <div class="col-lg-6">
                    <input type="text" class="form-control" id="val-username" name="lastName" placeholder="Enter a last Name.."
                      value="<%=response.dataValues.lastName%>">
                  </div>
                </div>


                <!--  hidden ids -->

                <input type="hidden" name="id" value="<%=response.dataValues.id%>">




                <div class="form-group row">
                  <label class="col-lg-4 col-form-label" for="val-email">Email <span class="text-danger">*</span>
                  </label>
                  <div class="col-lg-6">
                    <input type="text" class="form-control" id="val-email" name="email" placeholder="Your valid email.."
                      value="<%=response.dataValues.email%>">
                  </div>
                </div>


                <div class="form-group row">
                  <label class="col-lg-4 col-form-label" for="val-email">Phone <span class="text-danger">*</span>
                  </label>
                  <div class="col-lg-6">
                    <input type="number" class="form-control" id="val-email" name="phone"
                      value="<%=response.dataValues.phone%>">
                  </div>
                </div>


                <!--  <div class="form-group row">
                                            <label class="col-lg-4 col-form-label" for="val-email">Price <span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input type="number" class="form-control"  name="price"  value="<%=response.dataValues.price%>">
                                            </div>
                                        </div> -->




                <div class="form-group row">
                  <label class="col-lg-4 col-form-label" for="val-suggestions">Image <span class="text-danger">*</span>
                  </label>
                  <div class="col-lg-6">
                    <input type="file" class="form-control" name="image" accept="image/*" onchange="previewImage(event)">


                  </div>
                  <img src="<%='/upload/' + response.dataValues.image%>" height="50" id="image_view">
                </div>


                <div class="form-group row">
                  <label class="col-lg-4 col-form-label" for="val-suggestions">Licence <span
                      class="text-danger">*</span>
                  </label>
                  <div class="col-lg-6">
                    <input type="file" class="form-control" name="business_licence" accept="image/*"
                      onchange="previewImageLicence(event)">


                  </div>
                  <img src="<%='/upload/' + response.dataValues.businessLicence%>" height="50" id="image_view_Licence">
                </div>


                <div class="form-group row">
                  <label class="col-lg-4 col-form-label" for="val-suggestions">Insurance <span
                      class="text-danger">*</span>
                  </label>
                  <div class="col-lg-6">
                    <input type="file" class="form-control" name="insurance" accept="image/*" onchange="previewImageInsurance(event)">


                  </div>
                  <img src="<%='/upload/' + response.dataValues.insurance%>" height="50" id="image_view_Insurance">
                </div>


                <div class="form-group row">
                  <label class="col-lg-4 col-form-label" for="val-suggestions">Resume <span class="text-danger">*</span>
                  </label>
                  <div class="col-lg-6">
                    <input type="file" class="form-control" name="resume" accept="application/pdf,application/msword">


                  </div>
                  <%
                   if(response.dataValues.resume) {
                   var ext = response.dataValues.resume.split('.').pop(); 
                   if(ext=='pdf'){
                   %>
                  <img src="https://upload.wikimedia.org/wikipedia/commons/8/87/PDF_file_icon.svg" height="50" >
                  <% }else if(ext=='doc' || ext=='docx') { %>
                    <img src="https://cdn1.iconfinder.com/data/icons/file-formats-7/502/Untitled-9-512.png" height="50">
                    <% } }%>
                </div>




                <div class="form-group row">
                  <div class="col-lg-8 ml-auto">
                    <button type="submit" class="btn btn-primary">Update</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- #/ container -->
</div>
<!--**********************************
            Content body end
        ***********************************-->

<% include ../footer.ejs %>