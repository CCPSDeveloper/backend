<% include ../header.ejs %>
<% include ../navbar.ejs %>
<% include ../sidebar.ejs %>

<!--**********************************
            Content body start
        ***********************************-->
<div class="content-body">

  <div class="row page-titles mx-0">
    <div class="col p-md-0">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active"><a href="/admin/users">Back</a></li>
      </ol>
    </div>
  </div>
  <!-- row -->

  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-lg-12">

        <div class="card">

          <div class="card-body">
            <h4 class="card-title">User Edit</h4>
            <div class="form-validation">
              <form class="form-valide" action="/admin/user_edit" method="post" enctype="multipart/form-data">
                <div class="form-group row">
                  <label class="col-lg-4 col-form-label" for="val-username">First Name <span class="text-danger">*</span>
                  </label>
                  <div class="col-lg-6">
                    <input type="text" class="form-control" id="val-username" name="firstName" placeholder="Enter a Name.."
                      value="<%=response.dataValues.firstName%>">
                  </div>
                </div>

                <div class="form-group row">
                  <label class="col-lg-4 col-form-label" for="val-username">Last Name <span class="text-danger">*</span>
                  </label>
                  <div class="col-lg-6">
                    <input type="text" class="form-control" id="val-username" name="lastName" placeholder="Enter a last Name.."
                      value="<%=response.dataValues.lastName%>">
                  </div>
                </div>


                <!-- user hidden id -->
                <input type="hidden" name="id" value="<%=response.dataValues.id%>">
                  <!-- end- -->
                <div class="form-group row">
                  <label class="col-lg-4 col-form-label" for="val-email">Email <span class="text-danger">*</span>
                  </label>
                  <div class="col-lg-6">
                    <input type="text" class="form-control" id="val-email" name="email" placeholder="Your valid email.."
                      value="<%=response.dataValues.email%>">
                  </div>
                </div>


                <div class="form-group row">
                  <label class="col-lg-4 col-form-label" for="val-suggestions">Image <span class="text-danger">*</span>
                  </label>
                  <div class="col-lg-6">
                    <input type="file" class="form-control" name="image" accept="image/*" onchange="previewImage(event)">


                  </div>
                  <img src="<%='/upload/' + response.dataValues.image%>" height="50" id="image_view">
                </div>

                <div class="form-group row">
                  <label class="col-lg-4 col-form-label" for="val-currency">Location <span class="text-danger">*</span>
                  </label>
                  <div class="col-lg-6">

                    <input type="text" rows="2" cols="4" name="location" value="<%=response.dataValues.location%>"
                      class="form-control" id="autocomplete" placeholder="Your  Location" required>

                    <input type="hidden" value="" class="form-control" name="latitude" placeholder="latitude"
                      id="pac-lat" value="<%=response.dataValues.latitude%>">
                    <input type="hidden" value="" class="form-control" name="longitude" placeholder="longitude"
                      id="pac-lang" value="<%=response.dataValues.longitude%>">
                  </div>
                </div>





                <div class="form-group row">
                  <div class="col-lg-8 ml-auto">
                    <button type="submit" class="btn btn-primary">Update</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- #/ container -->
</div>
<!--**********************************
            Content body end
        ***********************************-->

<% include ../footer.ejs %>