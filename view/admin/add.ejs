        <div class="content-body">

            <div class="row page-titles mx-0">
                <div class="col p-md-0">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                        <li class="breadcrumb-item active"><a href="/admin/dashboard">Back</a></li>
                    </ol>
                </div>
            </div>
            <!-- row -->

            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-lg-12">

                        <div class="card">

                            <div class="card-body">
                                     <h4 class="card-title">User Add</h4>
                                <div class="form-validation">
                                    <form class="form-valide" action="/admin/add_user" method="post" enctype="multipart/form-data">
                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label" for="val-username">Name <span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" id="val-username" name="name" placeholder="Enter a Name.." required="required">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label" for="val-email">Email <span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" id="val-email" name="email" placeholder="Your valid email.." required>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label" for="val-password">Password <span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input type="password" class="form-control" id="val-password" name="password" placeholder="Choose a safe one.." required>
                                            </div>
                                        </div>
                                      
                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label" for="val-suggestions">Image <span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input type ="file" class="form-control" name="image" onchange="previewImage(event)" required>


                                            </div>
                                             <img src="https://upload.wikimedia.org/wikipedia/commons/a/ac/No_image_available.svg" height="50" id="image_view">
                                        </div>
                                     
                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label" for="val-currency">Location <span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-6">

                                                  <input type="text" rows ="2" cols="4" name ="location" value ="" class="form-control" id="autocomplete" placeholder="Your Shop Location" >
                                            
                                             <input type="hidden" value="" class="form-control" name="latitude" placeholder="latitude" id="pac-lat">
                                              <input type="hidden" value="" class="form-control" name="longitude" placeholder="longitude" id="pac-lang">
                                            </div>
                                        </div>


                                      
                                      
                                     
                                        <div class="form-group row">
                                            <div class="col-lg-8 ml-auto">
                                                <button type="submit" class="btn btn-primary">Submit</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #/ container -->
        </div>
