<% include ../header.ejs %>
<% include ../navbar.ejs %>
<% include ../sidebar.ejs %>


<div class="content-body">
  <%if(msg!=''){%>
  <div class="text-left">
    <button type="button" class="btn btn-success m-b-10 m-l-5" id="toastr-success-top-right"><%= msg%></button></div>
  <%} %>
  <div class="row page-titles mx-0">
    <div class="col p-md-0">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active"><a href="/admin/complete-orders">Complete Order</a></li>
      </ol>
    </div>
  </div>
  <!-- row -->

  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Complete Orders List</h4>
            <!-- <a href="/admin/add-user" class="btn mb-1 btn-rounded btn-outline-primary" style="float: right;margin: -40px 33px 2px 1px;"><span class="ladda-label">Add User</span><span class="ladda-spinner"></span><div class="ladda-progress" style="width: 136px;"></div></a> -->
            <div class="table-responsive">
              <table class="table table-striped table-bordered zero-configuration">
                <thead>
                  <tr>
                    <th>Id</th>
                    <th>OrderID</th>
                    <th>User name</th>
                    <th>Provider name</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <%
                  if(response && response.length > 0){

                  for( var i in response){%>
                  <tr>

                    <td><%=parseInt(i)+1%></td>
                    <td><%=response[i].id%></td>

                    <td><%=response[i].user.name%></td>
    
                    <td><%=response[i].provider.firstName + ' ' + response[i].provider.lastName%></td>
                    <%
                      var myDate =new Date(response[i].date*1000);
                    %>
                    <td><%=myDate.toLocaleString();%></td>
                    <!-- <td><%=response[i].time%></td> -->
                    <td style="cursor: pointer;"><span class="label gradient-2 btn-rounded "
                        rel="<%=response[i].id %>">Completed</span></td>
                    <td class="text-center btns_3">

                      <a style="" href="/admin/complete-order-view?id=<%=response[i].id%>"><i class="fa fa-eye"
                          title="View" style="color:#2aab77;font-size: 20px"></i></a>
                      <!--  <a style="color:#666;"  href="/admin/user-edit?id=<%=response[i].id%>"><i class="fa fa-pencil color-muted m-r-5" title="Edit" style="font-size: 20px;"></i> </a> -->
                      <a style="color:red;" href="#" class="order_delete" rel="<%=response[i].id%>"><i
                          class="fa fa-close color-danger" title="Delete" style="font-size: 20px"></i></a>


                    </td>
                  </tr>

                  <% } } %>

                  </tfoot>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- #/ container -->
</div>

<% include  ../footer.ejs %>